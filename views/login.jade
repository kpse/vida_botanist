extends layout

block content
  .row
    form( method="post")#login-form.well
      h1 登陆
      p.subheading 请使用注册的手机号登陆
      .form-group
        label 手机号码
        input(type="text", name="username", id='username', placeholder='请输入11位手机号码').required.form-control
      .form-group
        label 密码
        input(type="password", name="password", id='password', placeholder='输入密码').required.form-control
      button(type="submit")#btn-login.btn.btn-primary
        i.icon-lock.icon-white
        | 登陆
      div.clear-fix
      hr
      div.btm-links
        a(href='#')#forgot-password 忘记密码?
        a(href='/signup')#create-account 免费注册
