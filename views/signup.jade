extends layout

block content
  form( method="post")#login-form.well.span4
    h1 欢迎访问植物学家的女儿
    p.subheading 注册
    label 姓名
    input(type="text", name="fullname", id='fullname').span12.required
    label 称谓
    select(name="suffix", id='suffix').span12.required
        option(value="小姐") 小姐
        option(value="女士") 女士
        option(value="先生") 先生
    label 手机号
    input(type="text", name="username", id='username').span12.required
    label 密码
    input(type="password", name="password", id='password').span12.required
    label 重复密码
    input(type="password", name="password-repeat", id='password-repeat').span12.required

    button(type="submit")#btn-login.btn.btn-primary
      i.icon-lock.icon-white
      | 提交

